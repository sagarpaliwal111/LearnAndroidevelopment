<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        tools:context=".fragment.HomeFragment">



        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewTrypro"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="148dp"
            android:elevation="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardviewQuiz">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_color"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="290dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/pro" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="-20dp"
                    android:fontFamily="@font/cambay"
                    android:text="Upgrade to PRO âœ”"
                    android:textColor="#FFAB00"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/pt_sans"
                    android:text="Hide Ads &amp; Get Course Certification"
                    android:textColor="#BFBFBD"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewProgram"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="148dp"
            android:backgroundTint="#F800BFA5"
            android:elevation="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardviewTutorial">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:layout_marginStart="180dp"
                android:layout_marginEnd="60dp"
                android:src="@drawable/programpic"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/pt_sans"
                android:text="Advance Topics &amp; Projects"
                android:textAlignment="center"
                android:textColor="#181918"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/cambay"
                android:text="Advance Android"
                android:textAlignment="center"
                android:textColor="#FBFBFB"
                android:textSize="21sp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewQuestionAnswer"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="148dp"
            android:backgroundTint="#F800BFA5"
            android:elevation="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/cardviewProgram">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginStart="217dp"
                android:layout_marginEnd="60dp"
                android:src="@drawable/questionanswer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/pt_sans"
                android:text="Interview Questions &amp; Answers"
                android:textAlignment="center"
                android:textColor="#181918"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/cambay"
                android:text="Interview Questions"
                android:textAlignment="center"
                android:textColor="#FBFBFB"
                android:textSize="21sp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewTutorial"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#F800BFA5"
            android:elevation="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:layout_marginStart="180dp"
                android:layout_marginEnd="60dp"
                android:src="@drawable/pic1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/pt_sans"
                android:text="Android Tutorials"
                android:textAlignment="center"
                android:textColor="#FBFBFB"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/pt_sans"
                android:text="Android Complete Syllabus"
                android:textAlignment="center"
                android:textColor="#181918"
                android:textSize="15sp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewQuiz"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="148dp"
            android:backgroundTint="#F800BFA5"
            android:elevation="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardViewQuestionAnswer">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:layout_marginStart="180dp"
                android:layout_marginEnd="60dp"
                android:src="@drawable/quizpic2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/pt_sans"
                android:text="Set of 100 Questions"
                android:textAlignment="center"
                android:textColor="#181918"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/cambay"
                android:text="Android-Quiz"
                android:textAlignment="center"
                android:textColor="#FBFBFB"
                android:textSize="21sp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
